<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nbs.samplepaymentapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AutomaticTransferActivity" />
        <activity android:name=".activities.AutomaticTransferConfirmationActivity" />
        <activity android:name=".activities.AutomaticTransferFinishActivity" />
        <activity android:name=".activities.ManualBankTransferActivity" />
        <activity android:name=".activities.CreditCardPaymentActivity"></activity>
    </application>

</manifest>
